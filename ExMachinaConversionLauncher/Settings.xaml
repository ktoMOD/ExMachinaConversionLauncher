                    </StackPanel>
                </ToolTip>
            </Slider.ToolTip>
        </Slider>
        <TextBox LostFocus="FovTextBox_LostFocus" x:Name="FovTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="62" Margin="460,401,0,0">
