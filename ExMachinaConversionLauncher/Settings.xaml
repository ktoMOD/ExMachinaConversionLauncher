        <CheckBox x:Name="DoNotLoadMainmenuLevelCheckBox" HorizontalAlignment="Left" Margin="242,381,0,0" VerticalAlignment="Top" Unchecked="DoNotLoadMainmenuLevelCheckBox_Unchecked">
