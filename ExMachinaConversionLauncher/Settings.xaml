        <TextBox LostFocus="GammaGammaTextBox_LostFocus" x:Name="GammaGammaTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="62" Margin="460,326,0,0">
